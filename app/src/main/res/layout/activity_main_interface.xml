<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolBar1"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                fab:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
            <LinearLayout
                android:id="@+id/MainInterfaceToolBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:translationZ="10dp"
                android:elevation="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/startTrail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_play"
                        android:visibility="invisible"
                        />
                    <ImageButton
                        android:id="@+id/trail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="start"
                        android:background="@drawable/ic_subway_black"
                        />
                    <ImageButton
                        android:id="@+id/endTrail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_stop"
                        android:visibility="invisible"
                        />

                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/LatLngTip"/>
                    <ImageButton
                        android:id="@+id/addPoi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_location"
                        />
                    <ImageButton
                        android:id="@+id/query_poi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_search_black"
                        android:visibility="invisible"
                        />
                    <ImageButton
                        android:id="@+id/trans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/ic_close_black_24dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:translationZ="0dp"
                android:elevation="0dp">

                <com.github.barteksc.pdfviewer.PDFView
                    android:id="@+id/pdfView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:translationZ="0dp"
                    android:elevation="0dp">
                </com.github.barteksc.pdfviewer.PDFView>
                <ImageView
                    android:id="@+id/centerPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_center_focus_weak_black_24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="5dp"
            android:alpha="0.8">
            <ImageView
                android:id="@+id/myscale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/myscale"/>
            <TextView
                android:id="@+id/scale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/RightPDFButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:visibility="gone"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/white"
            fab:fab_colorRipple="@color/white"
            fab:fab_size="mini"
            fab:backgroundTint="#00FFFFFF"></com.github.clans.fab.FloatingActionButton>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/LeftPDFButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:visibility="gone"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/white"
            fab:fab_colorRipple="@color/white"
            fab:fab_size="mini"></com.github.clans.fab.FloatingActionButton>

        <CheckBox
            android:id="@+id/poiLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_alignParentRight="true"
            android:text="@string/ShowPOI"
            android:textStyle="bold"/>
        <CheckBox
            android:id="@+id/type1_poiLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:textStyle="bold"/>
        <CheckBox
            android:id="@+id/type2_poiLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:textStyle="bold"/>
        <CheckBox
            android:id="@+id/type3_poiLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:textStyle="bold"/>
        <CheckBox
            android:id="@+id/mzxy_poiLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_alignParentRight="true"
            android:text="自然村显示"
            android:checked="true"
            android:textStyle="bold"/>
        <CheckBox
            android:id="@+id/trailLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:layout_alignParentRight="true"
            android:text="@string/ShowTrail"
            android:textStyle="bold"/>
        <CheckBox
            android:id="@+id/whiteBlankLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:layout_alignParentRight="true"
            android:text="@string/ShowWhiteBlank"
            android:textStyle="bold"/>
        <CheckBox
            android:id="@+id/centerPointMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:layout_alignParentRight="true"
            android:text="@string/CenterMode"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:checked="false"/>
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/locHere"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_label="@string/Loc"
        fab:fab_size="mini"
        android:layout_alignParentBottom="true" />
    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/whiteBlank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="false"
        android:scaleType="fitStart"
        android:src="@drawable/ic_brush_black_24dp"
        fab:fab_size="mini" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/icon_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false"
        android:scaleType="fitStart"
        android:src="@drawable/ic_done_black_24dp"
        android:visibility="gone"
        fab:fab_size="mini" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/icon_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/icon_minus"
        android:layout_toStartOf="@+id/icon_shift"
        android:adjustViewBounds="false"
        android:scaleType="fitStart"
        android:src="@drawable/ic_insert_photo_black_24dp"
        android:visibility="gone"
        fab:fab_size="mini" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/icon_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/icon_ok"
        android:layout_toEndOf="@+id/icon_shift"
        android:adjustViewBounds="false"
        android:scaleType="fitStart"
        android:src="@drawable/ic_delete"
        android:visibility="gone"
        fab:fab_size="mini" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/icon_shift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/icon_plus"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false"
        android:scaleType="fitStart"
        android:src="@drawable/ic_all_out_black_24dp"
        android:visibility="gone"
        fab:fab_size="mini" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/icon_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/icon_ok"
        android:adjustViewBounds="false"
        android:scaleType="fitStart"
        android:src="@drawable/ic_remove_black_24dp"
        android:visibility="gone"
        fab:fab_size="mini" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/icon_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/icon_ok"
        android:adjustViewBounds="false"
        android:scaleType="fitStart"
        android:src="@drawable/ic_add"
        android:visibility="gone"
        fab:fab_size="mini" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/backpts_messure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="false"
        android:scaleType="fitStart"
        android:src="@drawable/ic_arrow_back"
        fab:fab_size="mini"
        android:visibility="gone"/>
    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/cancel_messure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="false"
        android:scaleType="fitStart"
        android:src="@drawable/ic_cancel_black_24dp"
        fab:fab_size="mini"
        android:visibility="gone"/>
    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/delete_messure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="false"
        android:scaleType="fitStart"
        android:src="@drawable/ic_crop_5_4_black_24dp"
        fab:fab_size="mini"
        android:visibility="gone"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/outputData_MainInterface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:src="@drawable/ic_output_black_24dp"
            fab:fab_label="@string/OutputSingleData"
            fab:fab_size="mini" />


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fam"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        fab:menu_backgroundColor="#ccffffff"
        fab:menu_fab_label="@string/Back"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/addTape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_label="@string/AddTape"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/addPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_label="@string/AddPhoto"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/restoreZoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_label="@string/Reset"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/messureDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_label="@string/Messure"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/outputData_MainInterface_Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_label="@string/OutputSingleData"
            fab:fab_size="mini" />
    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RightRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:translationZ="5dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/LeftRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:translationZ="5dp"/>
</android.support.v4.widget.DrawerLayout>